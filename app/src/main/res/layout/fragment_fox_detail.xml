<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="40dp">

    <ImageView
        android:id="@+id/fox_image_detail"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/content_description"
        tools:src="@tools:sample/avatars"
    />

    <TextView
        android:id="@+id/fox_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="@string/fox_name"
        app:layout_constraintTop_toBottomOf="@id/fox_image_detail"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/fox_age_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/fox_age"
        app:layout_constraintTop_toBottomOf="@id/fox_name_detail"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/fox_habitat_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/fox_habitat"
        app:layout_constraintTop_toBottomOf="@id/fox_age_detail"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>